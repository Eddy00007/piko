name: Notificaci칩n de cambios en strings.xml

on:
  push:
    branches:
      - espa침ol  # La rama en la que est치 tu workflow
  schedule:
    - cron: '0 * * * *'  # Ejecuci칩n cada hora
  workflow_dispatch:  # Permite la ejecuci칩n manual

jobs:
  check-updates:
    runs-on: ubuntu-latest
    
    steps:
    - name: Chequear el repositorio
      uses: actions/checkout@v3
      with:
        ref: dev  # Aseg칰rate de que est치s trabajando con la rama dev
    
    - name: Verificar cambios en strings.xml
      id: check_changes
      run: |
        # Obtener el 칰ltimo commit que modific칩 strings.xml
        git fetch origin dev
        git checkout dev
        git log -1 --format=%H -- src/main/resources/twitter/settings/values-es/strings.xml > last_commit.txt
        # Comparar con el 칰ltimo commit actual
        if [ "$(cat last_commit.txt)" != "$(git rev-parse HEAD)" ]; then
          echo "changed=true" >> $GITHUB_ENV
        else
          echo "changed=false" >> $GITHUB_ENV
        fi

    - name: Enviar notificaci칩n a Telegram
      if: env.changed == 'true'
      uses: appleboy/telegram-action@master
      with:
        token: ${{ secrets.TELEGRAM_TOKEN }}
        to: ${{ secrets.CHAT_ID }}
        message: |
          游뚿 Se ha modificado el archivo `strings.xml` en la rama `dev` de tu fork.
          Commit: `${{ github.event.head_commit.message }}`
          Ver cambios: [Enlace al commit](https://github.com/${{ github.repository }}/commit/${{ github.sha }})
